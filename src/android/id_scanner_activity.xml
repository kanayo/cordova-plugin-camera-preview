<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.kanayo.cordova.idscanner.IdScannerActivity"
  android:id="@+id/frame_container"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_gravity="center_horizontal|top"
  android:layout_weight=".7">

  <com.kanayo.cordova.idscanner.camera.CameraSourcePreview
      android:id="@+id/camera_preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


    <com.kanayo.cordova.idscanner.camera.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



  </com.kanayo.cordova.idscanner.camera.CameraSourcePreview>

  <LinearLayout
      android:id="@+id/control"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:background="#cc9C27B0">

    <Button
        android:id="@+id/switch_cameras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="8sp"
        android:textSize="20sp"
        android:layout_weight="1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_vertical"

        android:text="Switch Cameras" />

    <Button
        android:id="@+id/cancel_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="16sp"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:text="Cancel" />




  </LinearLayout>
</FrameLayout>
